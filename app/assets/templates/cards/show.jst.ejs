<div id="card_display">
  <a
    class="btn btn-default card_button"
    data-toggle="modal"
    data-target="#view_card_modal"
    data-card-id="<%= card.id %>"><%= card.escape("title") %></a>
</div>
  
<div class="modal fade" id="view_card_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header">
        <button 
          type="button" 
          class="close"><span>&times;</span></button>
        <h4 class="modal-title"><%= card.escape("title") %></h4>
      </div>
      
      <div class="modal-body">
        <p><%= card.escape("description")%></p>
      </div>
      
      <div class="modal-footer">
        <button 
          type="button" 
          class="btn btn-default" 
          data-dismiss="modal">Close</button>
          
        <button 
          type="button"
          class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>